{
  "name": "@logetogo/api",
  "version": "1.0.0",
  "description": "LogeTogo API Backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/routes.test.ts",
    "test:unit": "vitest run tests/server.test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^8.0.1",
    "eslint": "^8.51.0",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4",
    "tsx": "^3.14.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
